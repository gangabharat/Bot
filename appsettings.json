{
  "Logging": {
    "LogLevel": {
      "Default": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ], //using console & file 
    "MinimumLevel": "Verbose",
    "WriteTo": [
      { //console log configuration
        "Name": "Console"

      },
      { //file log configuration
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "bot"
    }
  },

  "ApplicationOptions": {
    "ApplicationName": "Bot",
    "ApplicationVersion": 1.0,
    "ApplicationDescription": "A bot command line tool is a program that allows users to interact with a bot through a command line interface (CLI).",
    "Endpoint": {
      "BaseUrl": "https://jsonplaceholder.typicode.com",
      "ApiEndPoint": "https://jsonplaceholder.typicode.com/photos",
      "Username": "user",
      "Password": "Admin@123",
      "Token": ""
    },
    "Encrypt": {
      "ClientId": "v5is9KmrLduQLWa2",
      "SecretKey": "7YuOWjFg78vuP9m8"
    },
    "Smtp": {
      "SmtpClient": "smtp.gmail.com",
      "Port": 587,
